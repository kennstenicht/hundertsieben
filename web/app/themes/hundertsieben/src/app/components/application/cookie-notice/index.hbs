<div
  class={{bem this.blockName modifiers=(hash is-visible=@showCookieNotice)}}
  ...attributes
>
  <div class={{bem this.blockName "header"}}>
    <div class={{bem this.blockName "title"}}>
      {{t "application.cookieNotice.headline"}}
    </div>
  </div>
  <div class={{bem this.blockName "content"}}>
    <div class={{bem this.blockName "message"}}>
      {{t "application.cookieNotice.message" htmlSafe=true}}
    </div>
    <div class={{bem this.blockName "settings"}}>
      <div class={{bem this.blockName "option"}}>
        <Input
          id="allow-required-cookies"
          disabled={{true}}
          name="allow-required-cookies"
          @type="checkbox"
          @checked={{true}}
        />
        <label
          class={{bem this.blockName "label"}}
          for="allow-required-cookies"
        >
          {{t "application.cookieNotice.options.required"}}
        </label>
      </div>
      <div class={{bem this.blockName "option"}}>
        <Input
          id="allow-analyse-cookies"
          name="allow-analyse-cookies"
          @type="checkbox"
          @checked={{this.allowAnalyseCookies}}
        />
        <label
          class={{bem this.blockName "label"}}
          for="allow-analyse-cookies"
        >
          {{t "application.cookieNotice.options.analyse"}}
        </label>
      </div>
      <div class={{bem this.blockName "option"}}>
        <Input
          id="allow-marketing-cookies"
          name="allow-marketing-cookies"
          @type="checkbox"
          @checked={{this.allowExternalMediaCookies}}
        />
        <label
          class={{bem this.blockName "label"}}
          for="allow-analyse-cookies"
        >
          {{t "application.cookieNotice.options.externalMedia"}}
        </label>
      </div>
      <div class={{bem this.blockName "spacer"}}></div>
      <Ui::Button
        @label={{t "application.cookieNotice.allowAllCookies.default"}}
        @style="outline"
        @onClick={{this.allowAllCookies}}
        class={{bem this.blockName "button"}}
      />
      <Ui::Button
        @label={{t "application.cookieNotice.allowSelectedCookies.default"}}
        @style="outline"
        @onClick={{this.allowSelectedCookies}}
        class={{bem this.blockName "button"}}
      />
    </div>
  </div>
</div>
